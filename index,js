import React from 'react';
import ReactDOM from 'react-dom';

import SearchBar from './search_bar'

// Create a new component.
// This component should produce some HTML
const App = () => {
  return (
    <div>
      <SearchBar />
    </div>
  );
}

// Take this components generated HTML and put it on the page (in the DOM)
ReactDOM.render(<App />, document.querySelector('.container'));


///// Add Youtube Search function /////
import React, { Component } from 'react';
import ReactDOM from 'react-dom';
import YTSearch from "youtube-api-search";
import SearchBar from './search_bar'
const API_KEY = 'aaaaaaaaaaaaaaa';

class App extends Component {
  constructor(props) {
    super(props);
    
    this.state = { videos = [] };
    
    YTSearch( {key: API_KEY, term: 'surfboard'}, (videos) => {
      this.setState({ videos }); // if key,value has the same name, can be written in this way
      // this.setState({ videos:videos })
    });
  }
  
  render() {
    return (
      <div>
        <SearchBar />
      </div>
    );
  }
}

///// Add VideoList component /////
import React, { Component } from 'react';
import ReactDOM from 'react-dom';
import YTSearch from "youtube-api-search";
import SearchBar from './search_bar'
import VideoList from './video_list'
const API_KEY = 'aaaaaaaaaaaaaaa';

class App extends Component {
  constructor(props) {
    super(props);
    
    this.state = { videos = [] };
    
    YTSearch( {key: API_KEY, term: 'surfboard'}, (videos) => {
      this.setState({ videos }); // if key,value has the same name, can be written in this way
      // this.setState({ videos:videos })
    });
  }
  
  render() {
    return (
      <div>
        <SearchBar />
        <VideoList videos={this.state.videos}/>
      </div>
    );
  }
}

///// Add VideoDetail component /////
import React, { Component } from 'react';
import ReactDOM from 'react-dom';
import YTSearch from "youtube-api-search";
import SearchBar from './search_bar'
import VideoList from './video_list'
import VideoDetail from './video_detail'
const API_KEY = 'aaaaaaaaaaaaaaa';

class App extends Component {
  constructor(props) {
    super(props);
    
    this.state = { videos = [] };
    
    YTSearch( {key: API_KEY, term: 'surfboard'}, (videos) => {
      this.setState({ videos });
    });
  }
  
  render() {
    return (
      <div>
        <SearchBar />
        <VideoDetail video={this.state.video[0]} />
        <VideoList videos={this.state.videos} />
      </div>
    );
  }
}
